    <!-- Email -->
    <style name="DirectionIconAgentProfileBbs">
        <item name="android:src">@drawable/ic_directions_car_black</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="Theme.MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="Theme.MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextyellow" parent="android:Widget.EditText">
        <item name="android:background">@drawable/yellowedittext_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- END agent_profile_bbs -->

    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="VerticalLine">
        <item name="android:background">@color/grey_200</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginBottom">4.0dip</item>
    </style>

    <style name="TextOnForm" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ff424242</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8.0dip</item>
    </style>
    <style name="ButtonYellow" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>
    <style name="LighterEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey_200</item>
    </style>
</resources>