    <style name="CashOutIconAgentProfileBbs">
        <item name="android:src">@drawable/cash_out</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="CashInCashOutLabelAgentProfileBbs">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CashInCashOutAgentProfileBbs">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DC143C</item>
    </style>

    <!-- Phone Call -->
    <style name="PhoneCallIconAgentProfileBbs">
        <item name="android:src">@drawable/call</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- SMS -->
    <style name="SmsIconAgentProfileBbs">
        <item name="android:src">@drawable/sms</item>
        <item name="android:layout_width">30dp</item>
