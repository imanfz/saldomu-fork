<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bbscashin_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorPrimaryDark"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_background_outline"
                    android:gravity="center"
                    android:text="@string/kembali"
                    android:textColor="@color/black" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/card_bk_blue"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorPrimary"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_background_blue"
                    android:gravity="center"
                    android:text="@string/sent"
                    android:textColor="@color/white" />

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/layout_btn_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/card_bk_blue"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorPrimaryDark"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/btn_resend_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_background_blue"
                android:maxEms="10"
                android:padding="6dp"
                android:text="@string/reg2_btn_text_resend_token_sms"
                android:textColor="@color/white" />

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@string/konfirmasi_alert_text"
                android:textColor="#b00020"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rp."
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size_large_material"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bbscashin_confirm_value_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_large_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bbscashin_confirm_value_source_acct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:textSize="@dimen/text_size_medium_material" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/bbscashin_confirm_value_benef_acct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_medium_material" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_milik_agen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="@string/milik_agen"
                    android:textSize="10sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_milik_pelanggan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="70dp"
                    android:layout_weight="2"
                    android:gravity="start"
                    android:text="@string/milik_pelanggan"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:padding="6dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bbscashin_confirm_text_no_destination"
                        android:layout_weight="1"
                        android:text="@string/no_tujuan"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_benef_no"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

                <TableRow
                    android:id="@+id/tb_name_benef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tvbenefname"
                        android:layout_weight="1"
                        android:text="@string/nama_rekening_tujuan"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_benef_name"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

                <TableRow
                    android:id="@+id/benef_city_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/kota_rekening_tujuan"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_benef_city"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/notif_no_hp_pengirim"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_no_hp"
                        android:layout_weight="1"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/fee"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_fee"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>
                <!--                <TableRow-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:paddingTop="6dp">-->

                <!--                    <TextView-->
                <!--                        android:layout_weight="1"-->
                <!--                        android:text="@string/additional_fee"-->
                <!--                        android:textColor="@color/colorSecondaryDark"/>-->

                <!--                    <TextView-->
                <!--                        android:id="@+id/bbscashin_confirm_additionalFee"-->
                <!--                        android:layout_weight="1"-->
                <!--                        android:textSize="@dimen/sheet_item_textsize"-->
                <!--                        android:textColor="@color/colorSecondaryDark"/>-->
                <!--                </TableRow>-->

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/total_bayar"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_total"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_weight="1"
                        android:text="@string/remark"
                        android:textColor="@color/colorSecondaryDark" />

                    <TextView
                        android:id="@+id/bbscashin_confirm_value_remark"
                        android:layout_weight="2"
                        android:textColor="@color/colorSecondaryDark"
                        android:textSize="@dimen/sheet_item_textsize" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/layout_TCASH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_no_tcash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_tcash"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_no_hp_tcash"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_small_material" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_OTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:orientation="vertical"
                android:padding="6dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payfriends_text_otp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/bbscashin_confirm_value_otp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/regist2_edithint_otp"
                    android:inputType="number|numberPassword"
                    android:maxLength="10"
                    android:textSize="@dimen/text_size_small_material" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/payfriends_otp"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:textStyle="italic" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/favorite_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_as_favorite_text_message"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/notes_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false"
                android:hint="Notes"
                android:inputType="text"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
