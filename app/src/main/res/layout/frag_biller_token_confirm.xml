                          android:textColor="@color/colorPrimary"
                          android:textSize="@dimen/abc_text_size_medium_material"
                          android:textStyle="bold"
                        />
                <TextView
                        android:id="@+id/billertoken_total_amount_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:textColor="@color/colorSecondaryDark"
                        android:layout_marginTop="4dp"
                        />
            </LinearLayout>


            <LinearLayout android:id="@+id/billertoken_layout_payment"
                          android:layout_width="match_parent"
                          android:visibility="gone"
                          android:orientation="vertical"
                          android:layout_marginLeft="16dp"
                          android:layout_marginBottom="12dp"
                          android:layout_height="wrap_content">

                <RelativeLayout
                              android:id="@+id/billertoken_layout_deskripsi"
                              android:clickable="true"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="left"
                              android:layout_centerVertical="true"
                              android:text="@string/description"
                              android:textColor="@color/colorPrimary"
                              android:textSize="@dimen/abc_text_size_medium_material"
                              android:textStyle="bold"
                            />

                    <ImageView android:id="@+id/billertoken_arrow_desc"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginRight="8dp"
                               android:clickable="true"
                               android:layout_centerVertical="true"
                               android:layout_alignParentRight="true"
                               android:src="@drawable/ic_circle_arrow_down"
                            />
                </RelativeLayout>

                <TableLayout android:id="@+id/billertoken_layout_table"
                             android:layout_width="match_parent"
                             android:visibility="gone"
                             android:layout_height="wrap_content"
                             android:layout_marginRight="4dp"
                             android:stretchColumns="1">


                </TableLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/layout_token"
                          android:visibility="gone"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginBottom="12dp"
                          android:layout_marginLeft="16dp"
                    >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/text_token_code"
                          android:textColor="@color/colorPrimary"
                          android:textSize="@dimen/abc_text_size_medium_material"
                          android:textStyle="bold"
                        />

                <EditText
                        android:enabled="true"
                        android:id="@+id/billertoken_token_value"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/regist2_edithint_otp"
                        android:inputType="number|numberPassword"
                    android:textColorHint="@color/semi_transparant"
                        android:textColor="@color/grey_1000b"
                        android:textStyle="bold"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/favorite_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_as_favorite_text_message"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/notes_edit_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Notes"
                android:layout_marginRight="16dp"
                android:inputType="text"
                android:layout_marginLeft="16dp"
                android:enabled="false"
                android:textSize="@dimen/abc_text_size_medium_material" />

        </LinearLayout>


