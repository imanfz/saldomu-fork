<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/myprofile_text_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_cash_collection_tv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Budi"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/rsb_acc_no"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_cash_collection_tv_acc_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="000123456"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/amount_deposit"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_cash_collection_tv_amount_deposit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Rp 1.000.000"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="@dimen/abc_text_size_medium_material"  />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:id="@+id/layout_otp_cashcollection"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payfriends_text_otp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/et_otp_cashcollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/otp_hint"
            android:textColor="@color/black"
            android:inputType="number|numberPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reg3_btn_text_resend_token_sms"
            android:gravity="right"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:id="@+id/tv_resend_otp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">
        <Button
            android:id="@+id/dialog_cash_collection_btn_cancel"
            android:background="@drawable/rounded_background_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="@string/cancel"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/dialog_cash_collection_btn_ok"
            android:background="@drawable/rounded_background_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="@string/ok"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>