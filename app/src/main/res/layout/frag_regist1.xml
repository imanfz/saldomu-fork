<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:theme="@style/RegisterTheme"
                android:background="@drawable/background_base"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_size_small_display_2_material"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/appname"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_display_3_material"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/regist1_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/grey_1000w"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/regist1_subtext_facebook"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/grey_1000w"
            android:visibility="gone" />

        <EditText
            android:id="@+id/noHP_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:digits="1234567890"
            android:hint="@string/regist1_edithint_nohp"
            android:inputType="phone"
            android:maxLength="@integer/nomor_lenght_20"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_1000w"
            android:textColorHint="@color/semi_white_transparant"
            android:textSize="@dimen/text_size_menu_material"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="*e.g. 081238xxxxxxx"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:enabled="true"
            android:gravity="start|center_vertical"
            android:hint="@string/regist1_edithint_nama"
            android:inputType="textPersonName|textCapSentences|text"
            android:maxLength="50"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_1000w"
            android:textColorHint="@color/semi_white_transparant"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="*e.g. Haryanto Koesman"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/email_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="true"
            android:hint="@string/regist1_edithint_email"
            android:inputType="textEmailAddress"
            android:maxLength="80"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_1000w"
            android:textColorHint="@color/semi_white_transparant"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="*e.g.  hary@mail.com"
            android:textColor="@color/white"
            android:textStyle="italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/myprofile_email_warning"
            android:textColor="@color/yellow_200"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/referal_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:enabled="true"
            android:gravity="center_horizontal"
            android:hint="@string/regist1_edithint_referal"
            android:maxLength="80"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="@color/grey_1000w"
            android:textColorHint="@color/semi_white_transparant"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/not_required"
            android:textSize="12dp"
            android:textColor="@color/white"/>


        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_bk"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorPrimary"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/btn_reg1_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_transparant"
                android:gravity="center"
                android:text="@string/regist1_button_verifikasi"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@drawable/color_selector" />
        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

    <FrameLayout android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
            >
            <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_copyright"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    />
    </FrameLayout>

</LinearLayout>