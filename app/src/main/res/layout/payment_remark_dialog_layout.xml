<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/layout_id_no"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="No. Bilyet Giro"
            android:textColor="@color/black"
            android:id="@+id/lbl_noId"/>

        <EditText
            android:id="@+id/et_id_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="@string/payment_remark_2"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/pay_remark_dialog_input_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center_vertical"
            android:hint="@string/payfriends_hint_message"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        android:id="@+id/layout_duedate">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="@string/effective_date"
            android:singleLine="false"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:text="@string/myprofile_text_date_click"
            android:textColor="@color/grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_margin="@dimen/margin_5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:background="@drawable/rounded_background_outline"
            android:id="@+id/pay_remark_dialog_cancel_btn"/>
        <Button
            android:layout_margin="@dimen/margin_5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/ok"
            android:textColor="@color/black"
            android:background="@drawable/rounded_background_blue"
            android:id="@+id/pay_remark_dialog_ok_btn"/>
    </LinearLayout>

</LinearLayout>