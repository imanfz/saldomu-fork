<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/nav_menu_layout"
              android:orientation="vertical"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:background="@color/transparent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llHeaderProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_border" />

                <ImageView
                    android:id="@+id/header_cust_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/header_cust_name"
                    style="@style/TextViewEllipsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="25"
                    android:textColor="@color/grey_1000w"
                    android:textSize="@dimen/abc_text_size_title_material" />

                <TextView
                    android:id="@+id/header_cust_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_1000w"
                    android:textSize="@dimen/abc_text_size_subhead_material" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondary"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_menu_balance"
                android:textColor="@color/grey_1000w"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:textColor="@color/grey_1000w"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <TextView
                android:id="@+id/balance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_1000w"
                android:textSize="@dimen/abc_text_size_body_1_material" />

            <ImageView
                android:id="@+id/btn_refresh_balance"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_refresh_balance" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBalanceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/periode_limit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_monthly_limit"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currency_limit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="@dimen/abc_text_size_body_1_material" />

                <TextView
                    android:id="@+id/limit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="@dimen/abc_text_size_body_1_material" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAgentDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="20dp"
                    android:text="@string/agent_name"
                    android:layout_weight="1"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <TextView
                    android:id="@+id/tvAgentDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:height="20dp"
                    android:text=""
                    android:textSize="@dimen/abc_text_size_small_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/set_online"
                    android:layout_weight="1"
                    android:textSize="@dimen/abc_text_size_small_material" />

                <Switch
                    android:layout_gravity="center_vertical"
                    android:id="@+id/swSettingOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="@string/no"
                    android:textOn="@string/yes" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffafafb1"
            android:paddingBottom="1dp" />
    </LinearLayout>

    <ListView
            android:id="@android:id/list"
            android:layout_width="240dp"
            android:dividerHeight="1dp"
            android:layout_height="wrap_content">

    </ListView>

</LinearLayout>