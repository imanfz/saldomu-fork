<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/help_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Contact Center"
        android:textColor="#de000000"
        android:textSize="@dimen/abc_text_size_body_2_material"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/phone_card_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/tr_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phone_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_call" />

            <TextView
                android:id="@+id/help_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/phone_image_view"
                android:textColor="#99000000"
                android:textSize="@dimen/abc_text_size_body_2_material" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape_white"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="salin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/whatsup_card_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/whatsup_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_whatsapp" />

            <TextView
                android:id="@+id/help_phone_whatsapp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/whatsup_image_view"
                android:textColor="#99000000"
                android:textSize="@dimen/abc_text_size_body_2_material" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>