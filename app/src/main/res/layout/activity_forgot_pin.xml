<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_base"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sgo.saldomu.activities.ForgotPin">
    <include android:id="@+id/main_toolbar"
        layout="@layout/toolbar_main"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@id/main_toolbar"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical">
<!--        <TextView-->
<!--            android:id="@+id/text_title"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="start"-->
<!--            android:text="@string/forgotpin"-->
<!--            android:textAppearance="@style/TextAppearance.AppCompat.Headline"-->
<!--            android:textColor="@color/grey_1000w" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/customer_mobile_number"
            android:textSize="16sp"
            android:textColor="@color/grey_1000w" />
        <EditText
            android:id="@+id/et_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/customer_mobile_number"
            android:textSize="16sp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/myprofile_text_bod"
            android:textSize="16sp"
            android:textColor="@color/grey_1000w" />
        <TextView
            android:id="@+id/tv_dob_forgotpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:padding="10dp"
            android:enabled="true"
            android:text="@string/myprofile_text_date_click"
            android:textColor="@color/grey_1000w" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_bk"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/colorPrimary"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/btn_submit_forgot_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_transparant"
                android:gravity="center"
                android:text="@string/proses"
                android:textColor="@drawable/color_selector" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_copyright"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </FrameLayout>
</RelativeLayout>
