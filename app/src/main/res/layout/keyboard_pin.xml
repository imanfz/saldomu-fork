<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/password_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparant"
        android:enabled="false"
        android:singleLine="true"
        android:textColor="#de000000"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pin_indicator1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_pin_indicator2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_pin_indicator3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_pin_indicator4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_pin_indicator5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />

        <View
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_pin_indicator6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_primary_dark" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_pin"
        android:background="@color/white"
        android:orientation="vertical">

        <TableRow style="@style/keyboard_row">

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_1"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_one" />
            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_2"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_two" />

            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_3"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_three" />
            </FrameLayout>
        </TableRow>

        <TableRow style="@style/keyboard_row">

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_4"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_four" />
            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_5"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_five" />

            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_6"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_six" />

            </FrameLayout>

        </TableRow>

        <TableRow style="@style/keyboard_row">

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_7"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_seven" />
            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_8"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_eight" />

            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_9"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_nine" />

            </FrameLayout>

        </TableRow>

        <TableRow style="@style/keyboard_row">

            <FrameLayout style="@style/keyboard_frame">

                <ImageView
                    android:id="@+id/iv_key_fingerprint"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fingerprint" />
            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_0"
                    style="@style/keyboard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_zero" />
            </FrameLayout>

            <FrameLayout style="@style/keyboard_frame">

                <TextView
                    android:id="@+id/t9_key_backspace"
                    android:background="@drawable/ripple_effect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorPrimaryDark"
                    android:tag="num_symbol"
                    android:text="@string/btn_backspace" />

            </FrameLayout>

        </TableRow>
    </TableLayout>
</RelativeLayout>